<label class="b-field b-field_input b-field_input_checkbox {{highlighted ? 'b-field_input_checkbox_highlighted' : ''}} {{required ? 'b-field_required' : ''}}"
       on-click="toggle">
    {{#label}}<div class="b-field__label">{{{label}}}</div>{{/label}}
    <div class="b-field__wrapper">
        <input class="b-field__input b-field__input_checkbox" type="checkbox" {{value ? 'checked' : ''}} />
        <span class="b-field__icon"></span>
    </div>
</label>
