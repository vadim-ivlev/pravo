<label class="b-field b-field_input b-field_input_checkbox b-comment__check" 
    on-click="subscribe">
    
    <div class="b-field__label">{{txt}}</div>
    <div class="b-field__wrapper">
        <input class="b-field__input b-field__input_checkbox" 
        name="newsletter"
        type="checkbox"
        {{ subscribed ? 'checked' : ''}}>
        <span class="b-field__icon"></span>
    </div>
</label>