{
  "name": "projects:kino",
  "subTasks": [
	  {
      "name": "style",
      "dest": "/dest/public/styles/custom/projects/kino",
      "src": {
        "include": [
          "/src/styles/custom/projects/kino/global.sass"
        ]
      },
      "plugins": [
        {
          "name": "gulp-sass",
          "options": {
            "outputStyle": "compressed"
          }
        }
      ]
    },
    {
      "name": "libScripts",
      "dest": "/dest/public/scripts/custom/projects/kino",
      "src": {
        "include": [
          "/src/scripts/custom/projects/kino/vendors/jquery.bttrlazyloading.min.js",
          "/src/scripts/custom/projects/kino/vendors/jquery.sidr.min.js",
          "/src/scripts/custom/projects/kino/vendors/iefix.js",
          "/src/scripts/custom/projects/kino/vendors/helpers.js"
        ]
      },
      "sourcemaps": true,
      "watch":  [
          "/src/scripts/custom/projects/kino/vendors/**/*.js"
      ],
      "plugins": [
        {
          "name": "gulp-debug",
          "options": {
            "title": "Js:"
          }
        },
        {
          "name": "gulp-concat",
          "options": "lib.js"
        }
      ]
    },
    {
      "name": "script",
      "dest": "/dest/public/scripts/custom/projects/kino",
      "src": {
        "include": [
          "/src/scripts/custom/projects/kino/kino.js"
        ]
      },
      "sourcemaps": true,
      "watch": true,
      "browserify": {
        "transforms": [
          {
            "name": "ractivate",
            "options": {
              "extensions": [
                ".ihtml"
              ]
            }
          }
        ],
        "watchify": true
      },
      "plugins": [
        {
          "name": "gulp-debug",
          "options": {
            "title": "Js:"
          }
        },
        {
          "name": "gulp-babel",
          "options": {
            "compact": true
          }
        },
        {
          "name": "gulp-concat",
          "options": "kino.js"
        }
      ]
    }
  ]
}