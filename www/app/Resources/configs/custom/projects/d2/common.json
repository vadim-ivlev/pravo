{
  "name": "projects:d2",
  "subTasks": [
    {
      "name": "style",
      "dest": "/dest/public/styles/custom/projects/d2",
      "src": {
        "include": [
          "/src/styles/custom/projects/d2/index.sass"
        ]
      },
      "sourcemaps": true,
      "watch": true,
      "plugins": [
        {
          "name": "gulp-sass",
          "options": {
            "outputStyle": "compressed"
          }
        }
      ]
    },
    {
      "name": "script",
      "dest": "/dest/public/scripts/custom/projects/d2",
      "src": {
        "include": [
          "/src/scripts/custom/projects/d2/global.js"
        ]
      },
      "sourcemaps": true,
      "browserify": {
        "transforms": [
          {
            "name": "ractivate",
            "options": {
              "extensions": [
                ".ihtml"
              ]
            }
          }
        ],
        "watchify": true
      },
      "watch": false,
      "plugins": [
        {
          "name": "gulp-debug",
          "options": {
            "title": "Js:"
          }
        },
        {
          "name": "gulp-babel",
          "options": {
            "compact": true
          }
        },
        {
          "name": "gulp-uglify"
        },
        {
          "name": "gulp-concat",
          "options": "global.js"
        }
      ]
    },
    {
      "name": "images",
      "dest": "/dest/public/images/custom/projects/d2",
      "src": {
        "include": [
          "/src/images/custom/projects/d2/**/*.*"
        ]
      }
    }
  ]
}