{
  "name": "includes:incut",
  "subTasks": [
	{
		"name": "b-read-more_large",
		"dest": "/dest/templates/incut",
		"src": {
			"include": [ "/src/pages/includes/route.html" ]
		},
		"plugins": [
			{
				"name": "gulp-rgswig",
				"options": {
					"data": {
						"type": "incut",
						"name": "b-read-more",
						"tmplFile": "b-read-more.swig",
						"mod": "large"
					}
				}
			},
			{
				"name": "gulp-minify-html",
				"options": {
					"conditionals": true,
					"comments": true,
					"quotes": true
				}
			},
			{
				"name": "gulp-rename",
				"options": {
					"basename": "b-read-more_large"
				}
			}
		]
	},
	{
		"name": "b-read-more_small",
		"dest": "/dest/templates/incut",
		"src": {
			"include": [ "/src/pages/includes/route.html" ]
		},
		"plugins": [
			{
				"name": "gulp-rgswig",
				"options": {
					"data": {
						"type": "incut",
						"name": "b-read-more",
						"tmplFile": "b-read-more.swig",
						"mod": "small"
					}
				}
			},
			
			"~gulp-minify-html",
			
			{
				"name": "gulp-rename",
				"options": {
					"basename": "b-read-more_small"
				}
			}
		]
	},
	{
		"name": "b-read-more_width",
