{
  "name": "includes:loadarray",
  "subTasks": [
	{
		"name": "b-news-inner",
		"dest": "/dest/templates/loadarray",
		"src": {
			"include": [ "/src/pages/includes/route.html" ]
		},
		"plugins": [
			{
				"name": "gulp-rgswig",
				"options": {
					"data": {
						"type": "loadarray",
						"name": "b-news-inner",
						"tmplFile": "b-news-inner.swig",
						"showBlocks": {
							"theme": true
						},
						"info": "{{# internal_tags}}{{.}}{{/ internal_tags}}"
					}
				}
			},
			
			{
				"name": "gulp-minify-html",
				"options": {
					"conditionals": true,
					"comments": true,
					"quotes": true
				}
			},
			
			{
				"name": "gulp-rename",
				"options": {
					"basename": "b-news-inner",
					"extname": ".ihtml"
				}
			}
		]
	},
	{
		"name": "b-news-inner_doc",
		"dest": "/dest/templates/loadarray",
		"src": {
			"include": [ "/src/pages/includes/route.html" ]
		},
		"plugins": [
			{
				"name": "gulp-rgswig",
				"options": {
					"data": {
						"type": "loadarray",
						"name": "b-news-inner",
						"tmplFile": "b-news-inner.swig",
						"mod": "doc",
						"info": "{{# internal_tags}}{{.}}{{/ internal_tags}}"
					}
				}
			},
			
			"~gulp-minify-html",
			
			{
				"name": "gulp-rename",
				"options": {
					"basename": "b-news-inner_doc",
					"extname": ".ihtml"
				}
			}
		]
	},
	{
		"name": "b-news",
		"dest": "/dest/templates/loadarray",
		"src": {
			"include": [ "/src/pages/includes/route.html" ]
		},
		"plugins": [
			{
				"name": "gulp-rgswig",
				"options": {
					"data": {
						"type": "loadarray",
						"name": "b-news",
						"tmplFile": "b-news.swig",
						"info": "{{# internal_tags}}{{.}}{{/ internal_tags}}"
					}
				}
			},
			
			"~gulp-minify-html",
			
			{
				"name": "gulp-rename",
				"options": {
					"basename": "b-news",
					"extname": ".ihtml"
				}
			}
		]
	}
  ]
}