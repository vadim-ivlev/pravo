{
  "name": "global",
  "subTasks": [
	{
		"name": "style",
		"dest": "/dest/public/styles",
		"src": {
			"include": [
				"/src/styles/global.sass"
			],
			"exclude": [
				"/src/styles/_*.sass"
			]
		},
		"sourcemaps": true,
		"watch": [
			"/src/styles/*.sass",
			"/src/styles/_*.sass",
			"/src/blocks/**/*.sass"
		],
		"plugins": [
			{
				"name": "gulp-sass",
				"options": {
					"outputStyle": "compressed"
				}
			}
		]
	},
	{
		"name": "script",
		"dest": "/dest/public/scripts",
		"src": {
			"include": [
				"/src/scripts/global.js"
			]
		},
		"sourcemaps": true,
		"browserify": {
			"transforms": [
				{
					"name": "ractivate",
					"options": {
						"extensions": [
							".ihtml"
						]
					}
				}
			],
			"watchify": true
		},
		"watch": false,
		"plugins": [
			{
				"name": "gulp-debug",
				"options": {
					"title": "Js:"
				}
			},
			{
				"name": "gulp-babel",
				"options": {
					"compact": true
				}
			},
			{
				"name": "gulp-uglify"
			},
			{
				"name": "gulp-concat",
				"options": "global.js"
			}
		]
	},
	{
      "name": "images",
      "dest": "/dest/public/images",
      "src": {
        "include": [
          "/src/images/**/*.*"
        ]
      }
    },
	{
      "name": "globalRoot",
      "dest": "/dest/root",
      "src": {
        "include": [
          "/src/root/*.*"
        ]
      }
    },
    {
      "name": "fonts",
      "dest": "/dest/public/fonts",
      "src": {
        "include": [
          "/src/fonts/**/*.*"
        ]
      }
    }
  ]
}