{
  "name": "projects:rgdigital",
  "subTasks": [
    {
      "name": "libStyles",
      "dest": "/dest/public/styles/custom/projects/rgdigital",
      "src": {
        "include": [
          "/src/styles/custom/projects/rgdigital/vendors/**/*.css"
        ]
      },
      "watch":  [
          "/src/styles/custom/projects/rgdigital/vendors/**/*.css"
		  ],
      "plugins": [
		{
          "name": "gulp-concat",
          "options": "lib.css"
        },
        {
          "name": "gulp-sass",
          "options": {
            "outputStyle": "compressed"
          }
        }
      ]
    },
	{
      "name": "globalStyles",
      "dest": "/dest/public/styles/custom/projects/rgdigital",
      "src": {
        "include": [
          "/src/styles/custom/projects/rgdigital/*.css",
          "/src/styles/custom/projects/rgdigital/index.sass"
        ]
      },
      "watch":  [
          "/src/styles/custom/projects/rgdigital/*.css"
		  ],
      "plugins": [
  		  {
          "name": "gulp-sass",
          "options": {
            "outputStyle": "compressed"
          }
        },
        {
          "name": "gulp-concat",
          "options": "global.css"
        }
      ]
    },
    {
      "name": "libScripts",
      "dest": "/dest/public/scripts/custom/projects/rgdigital",
      "src": {
        "include": [
          "/src/scripts/custom/projects/rgdigital/vendors/**/*.js"
        ]
      },
      "sourcemaps": true,
      "watch":  [
          "/src/scripts/custom/projects/rgdigital/vendors/**/*.js"
      ],
      "plugins": [
        {
          "name": "gulp-concat",
          "options": "lib.js"
        },
        { "name": "gulp-uglify" }
      ]
    },
    {
      "name": "globalScripts",
      "dest": "/dest/public/scripts/custom/projects/rgdigital",
      "src": {
        "include": [
          "/src/scripts/custom/projects/rgdigital/script.js",
          "/src/scripts/custom/projects/rgdigital/script_article.js"
        ]
      },
      "sourcemaps": true,
      "watch": true,
      "plugins": [
        { "name": "gulp-uglify" }
      ]
    }
  ]
}